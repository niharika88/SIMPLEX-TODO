<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
    <div class="text-right">
      <%= link_to "New Label", new_label_path(item: @item), remote: true, class: "btn btn-primary" %>
    </div>
    <%= f.select(:tags, Label.all.collect {|p| [p.name, p.id] }, {},{:multiple => true})%>
  </div>
 
  
  <div class="field">
    <%= f.label :duedate %><br>
    <%= f.datetime_select :duedate %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.all.collect {|p| [p.email, p.id] } %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, Item.statuses.keys %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
