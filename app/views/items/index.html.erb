<p id="notice"><%= notice %></p>
<%= link_to new_item_path, class: "btn btn-default" do %>
  <i class="glyphicon glyphicon-plus"></i> New Todo
<% end %>

<section class="list">
  <header>To Be Done </header>
  <article class="card">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Duedate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <% if item.status == "to_be_done" && item.user == current_user %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.labels.collect{|p| p.name} %></td>
        <td><%= item.duedate %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</article>
</section>

