

<section class="list">
  <article class="card">
  <h1>ToDO</h1>
<p>
  <strong>Title:</strong>
  <%= @item.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @item.labels.collect{|l| l.name} %>
</p>

<p>
  <strong>Duedate:</strong>
  <%= @item.duedate %>
</p>

<p>
  <strong>Assigned Member:</strong>
  <%= @item.user.email %>
</p>

<p>
  <strong>Status:</strong>
  <%= @item.status %>
</p>

<%= link_to 'Edit', edit_item_path(@item), class: "btn btn-default" %> |
<%= link_to 'Back', items_path, class: "btn btn-default" %>
</article>
</section>
