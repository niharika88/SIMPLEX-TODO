<h1>Todo items List</h1>

<h2>To do:</h2>
<% @tasks.each do |t| %>
    <p>
        <strong><%= t.title %></strong>
        <small><%= link_to "Mark as Done", task_path(t), :method => :put %></small>
    </p>
<%end %>

<h2>Complete:</h2>
<% @done.each do |t| %>
    <p>
        <%= t.title %>
        <small><%= link_to "Remove", t, :confirm => "is it ok to remove this from the list?", :method => :delete %></small>
    </p>
<% end %>

<p><%= link_to "Add an item to the list", new_task_path %></p>